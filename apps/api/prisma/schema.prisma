generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER
  ADMIN
}

enum UserStatus {
  PENDING
  ACTIVE
}

enum WalletType {
  MULTISIG
  SSS
  KMS
  BACKEND_SEC
  MPC
  POLICY_GUARD
}

enum WithdrawStatus {
  PENDING
  EXECUTED
  REJECTED
}

model User {
  id           String     @id @default(cuid())
  email        String     @unique
  passwordHash String
  role         UserRole   @default(USER)
  status       UserStatus @default(PENDING)
  createdAt    DateTime   @default(now())

  wallets      Wallet[]
}

model Wallet {
  id         String     @id @default(cuid())
  userId     String
  walletType WalletType
  address    String
  createdAt  DateTime   @default(now())

  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  withdraws  WithdrawRequest[]
  limit      WalletLimit?
  whitelist  Whitelist[]

  @@unique([userId, walletType])
}

model WithdrawRequest {
  id         String         @id @default(cuid())
  walletId   String
  amount     String         // wei string
  toAddress  String
  status     WithdrawStatus @default(PENDING)
  createdAt  DateTime       @default(now())
  approvedBy String?
  txHash     String?

  wallet     Wallet         @relation(fields: [walletId], references: [id], onDelete: Cascade)

  @@index([status])
}

model WalletLimit {
  walletId      String @id
  dailyLimit    String
  singleTxLimit String

  wallet        Wallet @relation(fields: [walletId], references: [id], onDelete: Cascade)
}

model Whitelist {
  id       String @id @default(cuid())
  walletId String
  address  String

  wallet   Wallet  @relation(fields: [walletId], references: [id], onDelete: Cascade)

  @@unique([walletId, address])
}
